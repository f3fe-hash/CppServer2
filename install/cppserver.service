[Unit]
Description=CppServer Service
After=network-online.target
Wants=network-online.target

[Service]
ExecStart=/etc/CppServer/server
Restart=on-failure
User=root
WorkingDirectory=/etc/CppServer
Nice=-15
RestartSec=5
StandardOutput=journal
StandardError=journal


[Install]
WantedBy=multi-user.target
